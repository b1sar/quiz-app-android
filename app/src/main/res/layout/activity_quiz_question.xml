<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuizQuestionActivity">
    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        >
        <TextView
            android:id="@+id/tv_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who this flag belongs to?"
            android:textStyle="bold"
            android:textSize="25dp"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/img_question_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_flag_of_argentina"
            android:layout_marginTop="20dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:padding="16dp"
            >

            <!-- What is the layout_weight in the progress bar? -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:progress="1"
                android:max="10"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                />
            <TextView
                android:id="@+id/progressBar_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="1/10"
                android:textColor="#7A8089"
                android:textSize="16dp"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_option_first"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_margin="10dp"
            android:text="Argentina"
            android:gravity="center"
            android:background="@drawable/default_option_bg"/>

        <TextView
            android:id="@+id/tv_option_second"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_margin="10dp"
            android:text="Argentina"
            android:gravity="center"
            android:background="@drawable/default_option_bg"/>

        <TextView
            android:id="@+id/tv_option_third"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_margin="10dp"
            android:text="Argentina"
            android:gravity="center"
            android:background="@drawable/default_option_bg"/>

        <TextView
            android:id="@+id/tv_option_fourth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_margin="10dp"
            android:text="Argentina"
            android:gravity="center"
            android:background="@drawable/default_option_bg"/>

        <Button
            android:id="@+id/btn_submit_question"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_margin="16dp"
            android:padding="8dp"
            android:background="@drawable/deneme2"
            />
    </LinearLayout>


</ScrollView>