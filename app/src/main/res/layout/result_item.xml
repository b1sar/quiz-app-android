<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:layout_margin="16dp">

    <!-- id, date, username, correctAnswerCount, totalAnswerCount + detaylarButonu?-->
    <TextView
        android:id="@+id/result_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="id"
        android:textSize="16dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/result_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:textSize="16dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/result_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="date"
        android:textSize="16dp"
        android:textColor="@android:color/holo_green_dark"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/result_correct_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/number_red_badge"
        android:padding="1dp"
        android:text="7"
        android:textSize="12dp"
        android:textAlignment="center"

        android:textColor="@android:color/white"
        android:layout_margin="8dp"/>

    <TextView
        android:id="@+id/result_total_answer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@android:color/white"
        android:padding="1dp"
        android:background="@drawable/number_red_badge"
        android:layout_margin="8dp" />

</LinearLayout>